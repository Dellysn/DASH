<h1 class="center">Ideas</h1>

<hr>
<div class="row" style="height: 100vh">
    {{#each ideas}}
    <div class="col s12 m4">
        <div class="card green darken-1">
            <div class="card-content white-text">
                <span class="card-title">{{title}}</span>
                <p>{{idea}}</p>

            </div>
            <div class="card-action yellow">
                <a class="black-text disabled">{{author}}</a>
                <a href="/idea/edit/{{id}}">Edit </a>
                <form action="/idea/{{id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="submit" class=" btn red" value="Delete">
                </form>
            </div>
        </div>
    </div>
    {{else}}
    <h2 class="red-text center"> No ideas Available</h2>
    {{/each}}
</div>