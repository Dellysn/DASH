<h1 class="center">Add Stories</h1>
{{#each errors}}
<div class="materialert error">{{text}}</div>
{{/each}}

<form class="col s12" action="/idea/add" method="POST" style="height: 100vh">


    <div class="row">
        <div class="input-field col s6">
            <input placeholder="Placeholder" id="title" type="text" name="title">
            <label for="title">Title</label>
        </div>
        <div class="input-field col s6">
            <input id="author" name="author" type="text">
            <label for="author">Author</label>
        </div>
    </div>

    <div class="row">
        <div class="input-field col s12">
            <textarea id="textarea1" class="materialize-textarea" name="idea"></textarea>
            <label for="textarea1">Your Stories</label>
        </div>

    </div>
    <input type="submit" class="btn green">

</form>