<h1 class="center">Add an Idea</h1>

<div class="row">
    <form class="col s12" action="/idea/add" method="POST">




        <input type="hidden" name="_method" value="PUT">

        <div class="form-group">
            <label for="title">Title</label>
            <input placeholder="Placeholder" id="title" type="text" name="title" class="form-control">

        </div>
        <div class="form-group"> <label for="author">Author</label>
            <input id="author" name="author" class="form-control" type="text">

        </div>

        <div class="form-group">
            <label for="textarea1">Your Idea</label>
            <textarea class="form-control" id="exampleTextarea" rows="3" name="idea"></textarea>
        </div>

        <input type="submit" value="Post" class="btn btn-success">

    </form>
</div>